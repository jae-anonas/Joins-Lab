<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.roosevelt.joins_lab.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Data"/>

    <Button
        android:id="@+id/btnSameCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employees in the Same Company"/>

    <Button
        android:id="@+id/btnCompaniesInBoston"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Companies in Boston"/>

    <Button
        android:id="@+id/btnHighestSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company with the Highest Salary"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result: "/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
